rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Breathing sessions - users can only access their own sessions
      match /breathingSessions/{sessionId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Trigger tracker - users can only access their own triggers
      match /triggers/{triggerId} {
        allow read, create, update: if request.auth != null && request.auth.uid == userId;
        allow delete: if false; // Prevent accidental deletion
      }
      
      // Mood check-ins - users can only access their own moods
      match /moods/{moodId} {
        allow read, create, update, list: if request.auth != null && request.auth.uid == userId;
        allow delete: if request.auth != null && request.auth.uid == userId;
      }
      
      // Affirmation preferences - users can read/write their own preferences
      match /aff_prefs/{prefId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // User affirmations - users can only access their own affirmations
      match /affirmations/{affirmationId} {
        allow read, create, update, list: if request.auth != null && request.auth.uid == userId;
        allow delete: if request.auth != null && request.auth.uid == userId;
      }
      
      // Sober homes data (if needed)
      match /soberHomes/{homeId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Check-ins (if needed)
      match /checkIns/{checkInId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Public read-only data (events, news, etc.)
    match /events/{eventId} {
      allow read: if true;
      allow write: if false; // Admin only via console
    }
    
    match /news/{newsId} {
      allow read: if true;
      allow write: if false; // Admin only via console
    }
    
    // Providers - public read, authenticated write
    match /providers/{providerId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
        (request.auth.uid == resource.data.userId || 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }
  }
}
